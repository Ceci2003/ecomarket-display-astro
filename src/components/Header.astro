---
import { getSettings } from '../utils/data';
import { getBasePath } from '../utils/language';
import type { Language } from '../utils/language';
import LanguageSwitch from './LanguageSwitch.astro';

interface Props {
  lang: Language;
  currentPath: string;
}

const { lang, currentPath } = Astro.props;
const settings = getSettings(lang);
const basePath = getBasePath(lang);
---

<header class="header">
  <div class="container">
    <nav class="nav">
      <a href={basePath || '/'} class="logo">
        {settings.siteTitle}
      </a>
      <ul class="nav-links">
        <li><a href={basePath || '/'} class={currentPath === basePath || currentPath === '/' ? 'active' : ''}>{settings.navigation.home}</a></li>
        <li><a href={`${basePath}/products`} class={currentPath.includes('/products') ? 'active' : ''}>{settings.navigation.products}</a></li>
        <li><a href={`${basePath}/about`} class={currentPath.includes('/about') ? 'active' : ''}>{settings.navigation.about}</a></li>
        <li><a href={`${basePath}/contact`} class={currentPath.includes('/contact') ? 'active' : ''}>{settings.navigation.contact}</a></li>
      </ul>
      <LanguageSwitch currentLang={lang} currentPath={currentPath} />
    </nav>
  </div>
</header>

<style>
  .header {
    background-color: var(--color-background);
    border-bottom: 1px solid var(--color-border);
    padding: 1rem 0;
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(10px);
    background-color: rgba(255, 255, 255, 0.95);
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .logo {
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--color-primary);
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: 2rem;
    flex: 1;
    justify-content: center;
  }

  .nav-links a {
    color: var(--color-text);
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .nav-links a:hover,
  .nav-links a.active {
    color: var(--color-primary);
  }

  @media (max-width: 768px) {
    .nav {
      flex-wrap: wrap;
    }

    .nav-links {
      order: 3;
      width: 100%;
      justify-content: space-around;
      gap: 1rem;
    }
  }
</style>

