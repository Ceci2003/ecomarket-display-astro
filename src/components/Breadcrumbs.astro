---
import type { Language } from '../utils/language';
import { getSettings } from '../utils/data';

interface Props {
  lang: Language;
  items: Array<{ label: string; href: string }>;
}

const { lang, items } = Astro.props;
const settings = getSettings(lang);
const basePath = lang === 'en' ? '/en' : '';
---

<nav class="breadcrumbs" aria-label="Breadcrumb">
  <ol>
    <li><a href={basePath || '/'}>{settings.navigation.home}</a></li>
    {items.map((item) => (
      <li>
        <a href={item.href}>{item.label}</a>
      </li>
    ))}
  </ol>
</nav>

<style>
  .breadcrumbs {
    margin: 1rem 0;
  }

  .breadcrumbs ol {
    display: flex;
    list-style: none;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .breadcrumbs li {
    display: flex;
    align-items: center;
  }

  .breadcrumbs li:not(:last-child)::after {
    content: '/';
    margin-left: 0.5rem;
    color: var(--color-border);
  }

  .breadcrumbs a {
    color: var(--color-text);
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }

  .breadcrumbs a:hover {
    opacity: 1;
    color: var(--color-primary);
  }
</style>

