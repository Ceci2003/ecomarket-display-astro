---
import { getSettings } from '../utils/data';
import { getBasePath } from '../utils/language';
import type { Language } from '../utils/language';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const settings = getSettings(lang);
const basePath = getBasePath(lang);
const contacts = settings.contacts;
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <h3>{settings.siteTitle}</h3>
        <p>{settings.motto}</p>
      </div>
      <div class="footer-section">
        <h4>{lang === 'bg' ? 'Контакти' : 'Contact'}</h4>
        <p>{contacts.address}</p>
        <p><a href={`tel:${contacts.phone}`}>{contacts.phone}</a></p>
        <p><a href={`mailto:${contacts.email}`}>{contacts.email}</a></p>
      </div>
      <div class="footer-section">
        <h4>{lang === 'bg' ? 'Социални мрежи' : 'Social Media'}</h4>
        <div class="social-links">
          {contacts.facebook && (
            <a href={contacts.facebook} target="_blank" rel="noopener noreferrer" aria-label="Facebook">
              Facebook
            </a>
          )}
          {contacts.instagram && (
            <a href={contacts.instagram} target="_blank" rel="noopener noreferrer" aria-label="Instagram">
              Instagram
            </a>
          )}
          {contacts.tiktok && (
            <a href={contacts.tiktok} target="_blank" rel="noopener noreferrer" aria-label="TikTok">
              TikTok
            </a>
          )}
        </div>
      </div>
      <div class="footer-section">
        <h4>{lang === 'bg' ? 'Навигация' : 'Navigation'}</h4>
        <ul class="footer-links">
          <li><a href={basePath || '/'}>{settings.navigation.home}</a></li>
          <li><a href={`${basePath}/products`}>{settings.navigation.products}</a></li>
          <li><a href={`${basePath}/about`}>{settings.navigation.about}</a></li>
          <li><a href={`${basePath}/contact`}>{settings.navigation.contact}</a></li>
        </ul>
      </div>
    </div>
    <div class="footer-bottom">
      <p>{settings.footer.copyright}</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-card-background);
    border-top: 1px solid var(--color-border);
    padding: 3rem 0 1rem;
    margin-top: 4rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-section h3,
  .footer-section h4 {
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .footer-section p {
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }

  .social-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .footer-links {
    list-style: none;
  }

  .footer-links li {
    margin-bottom: 0.5rem;
  }

  .footer-bottom {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
    color: var(--color-text);
    opacity: 0.7;
  }
</style>

